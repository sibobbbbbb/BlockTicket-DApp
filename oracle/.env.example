# Server Configuration
PORT=3001
NODE_ENV=development

# RPC URL for private Ethereum network (Geth/Hardhat)
RPC_URL=http://127.0.0.1:8545

# Chain ID (1337 for Geth, 31337 for Hardhat)
CHAIN_ID=1337

# Oracle wallet private key (WITHOUT 0x prefix)
ORACLE_PRIVATE_KEY=your_private_key_here

# Smart Contract Addresses
ORACLE_CONSUMER_ADDRESS=0x0000000000000000000000000000000000000000

# CoinGecko API
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Cache TTL in seconds
RATE_CACHE_TTL_SECONDS=300

# Update interval in milliseconds
RATE_UPDATE_INTERVAL_MS=300000

# Default max tickets per verified user
KYC_DEFAULT_MAX_TICKETS=4

# KYC validity period in days
KYC_EXPIRY_DAYS=365

# Salt for identity hash (keep secret!)
KYC_HASH_SALT=your_secret_salt_here
